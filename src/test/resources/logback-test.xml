<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- With Colors -->
            <pattern>[%X{akkaTimestamp}]%highlight([%-5level]) %message%n%nopex</pattern>
            <!--<pattern>[%date][%logger{1}]%n %highlight([%-5level]) %message%n%xException</pattern>-->
            <!-- Without Colors -->
            <!--<pattern>[%date][%logger{1}]%n [%-5level]%message%n%xException</pattern>-->
        </encoder>
    </appender>

    <logger name="akka.persistence"                 level="INFO"/>
    <logger name="akka.serialization"               level="INFO"/>

    <root level="DEBUG">
        <!--<appender-ref ref="FILE"/>-->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>